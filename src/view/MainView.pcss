@import "../pcss/utils.pcss";


.MainView{
	display: flex;
	flex-direction: column;
	height: 100%;
	&-header{
		height: 56px;
		box-shadow: 0 1px 3px rgba(0, 0, 0, .5);
		position: relative;
		z-index: 10;
		.title{
			margin-top: 16px;
			display: inline-block;
		}
		.logout{
			float: right;
			margin: 16px;
			cursor: pointer;
		}
	}
	&-content{
		display: flex;
		flex-direction: row;
		flex: 1;
		position: relative;
		z-index: 9;
	}
}